{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-async-promise-executor": "off",
    "no-misleading-character-class": "off",
    "no-useless-catch": "off",
    "no-unused-vars": "off",
    "quotes": ["error", "double"],
    "no-console": ["warn", {
      "allow": ["warn", "error"]
    }]
  }
}
